<nav class="navbar navbar-default nospace navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t('kexchange'),home_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if curr_user %>
        <ul class="nav navbar-nav navbar-right">
          <% if curr_user.is_admin %>
            <% if current_page?(admin_path) %>
              <li class="active">
            <% else %>
              <li>
            <% end %>
            <%= link_to raw(%q(<span class="glyphicon glyphicon-equalizer" aria-hidden="true"></span> )+t('admin_console')), artists_path %></li>
          <% end %>

          <% if current_page?(requests_path) %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
              <%= link_to raw(%q(<span class="glyphicon glyphicon-list" aria-hidden="true"></span> )+t('myrequest')), requests_path %>
            </li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <% if curr_user.is_admin %>
                <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
              <% end %>
              <%= curr_user.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% if current_page?(edit_user_path(id:curr_user.id)) %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
                <%= link_to raw(%q(<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> )+t('user.edit.heading')), edit_user_path(curr_user.id)%></li>
              <li><%= link_to raw(%q(<span class="glyphicon glyphicon-off" aria-hidden="true"></span> )+t('logout')), logout_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <% if current_page?(new_user_path) %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
            <%= link_to t('signup'), new_user_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t 'login' %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <%= simple_form_for(:credentials, url: signin_path) do |f| %>
                <%= f.input :username, placeholder: t('username'), label: false, input_html: {class: 'dropdowninput'} %>
                <%= f.input :password, placeholder: t('password'), label: false, input_html: {class: 'dropdowninput'} %>
                <%= f.button :submit, t('login'), class:'black' %>
              <% end %>
            </div>
          </li>
        </ul>
      <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
